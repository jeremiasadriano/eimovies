<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/top_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top_title"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                tools:text="Titulo do filme" />

            <TextView
                android:id="@+id/top_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:textColor="#0266fa"
                tools:text="#Drama" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B9646262"
                    tools:text="4.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/rating_star"
                    android:textColor="#B9646262" />
            </LinearLayout>

            <TextView
                android:id="@+id/top_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#B9646262"
                tools:text="2023" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>